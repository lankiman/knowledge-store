@model e_learning.ViewModels.LayoutsViewModel

@{
    var currentViewName = ViewData["CurrentViewName"] as string;
    string GetActiveClass(string viewName)
    {
        return currentViewName == viewName ? "active" : "";

    };
}

<aside data-inr_sidebar-menu class="inr_sidebar-menu z-10 h-[calc(100dvh - 5rem)] flex-shrink-0 sticky bottom-0 left-0 top-[5rem] flex w-[5rem] flex-col items-center overflow-hidden border-r-accent_lightGray bg-white pt-[1rem] shadow-md">
    <div class="inr_sidebar-top mb-[1rem] flex w-full flex-col items-center gap-2">
        <a>
            <img class="inr_sidebar-profile-image" src="~/images/profile-pic.png" alt="profile_pic" />
        </a>
        <div class="inr_sidebar-top-text text-center">
            <p class="hidden-sidebar">Welcome to E-LESSSON</p>
            <p class="hidden-sidebar font-bold text-accent_lightGray">@Model.User.Firstname @Model.User.Lastname</p>
        </div>
    </div>
    <div class="inr_sidbar-middle flex-1 w-full overflow-x-hidden">
        <ul class="inr_sidebar-list m-0 flex flex-col p-0">
            <li class="inr_sidebar-list-item @GetActiveClass("Dashboard")">
                <a asp-action="Dashboard" asp-controller="Learner" class="inr_sidebar-link">
                    <span class="material-symbols-outlined inr_custom-icon-class">
                        dashboard
                    </span>
                    <span class="hidden-sidebar inr_sidebar-link-text">
                        Dashboard
                    </span>
                </a>
            </li>

            <li class="inr_sidebar-list-item">
                <a class="inr_sidebar-link">
                    <span class="material-symbols-outlined inr_custom-icon-class">
                        library_books
                    </span>
                    <span class="hidden-sidebar inr_sidebar-list-text">
                        Courses
                    </span>
                </a>

            </li>

            <li class="inr_sidebar-list-item">
                <a class="inr_sidebar-link">
                    <span class="material-symbols-outlined inr_custom-icon-class">
                        bookmarks
                    </span>
                    <span class="hidden-sidebar inr_sidebar-list-text">
                        Bookmarks
                    </span>
                </a>
            </li>
        </ul>
    </div>
    <div class="inr_sidebar-bottom flex w-full flex-col">
        <ul class="inr_sidebar-list m-0 flex flex-col p-0">
            <li class="inr_sidebar-list-item">
                <a class="inr_sidebar-link">
                    <span class="material-symbols-outlined inr_custom-icon-class">
                        settings
                    </span>
                    <span class="hidden-sidebar inr_sidebar-link-text">
                        Settings
                    </span>
                </a>
            </li>
        </ul>
    </div>
</aside>