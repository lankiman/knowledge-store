@model e_learning.Views.Instructor.ViewModels.CreateLessonViewModel
@{
}


<div class="flex h-full w-full flex-col p-4 md:flex-row">
    <div class="inr_video-form flex h-full w-full flex-col items-center justify-center text-sm md:flex-row md:text-md">
        <div data-drag-drop-container class="drag-drop-container border-2 flex h-full w-full flex-col items-center justify-center rounded-md border-accent_lightGray bg-white p-2 text-center shadow-lg md:self-center md:w-1/2">
            <input data-file-input class="file-input hidden" type="file" accept=".mp4" multiple />
            <span class="material-symbols-outlined animate-pulse" style="font-size:5rem">
                upload
            </span>
            <p>Drag and drop video files here to upload</p>
            <p class="text-sm text-accent_lightGray">your lessons will be private till you publish them</p>
            <button type="button" data-select-files-btn class="select-files-btn mt-4 w-fit rounded-md bg-accent p-4 text-white hover:bg-black">Select Files</button>
        </div>
        @*<partial name="Partials/_VideoDetailsFormPartial" />*@
    <div data-uploading-files-container class="uploading-files-container border-2 hidden h-full w-full flex-col rounded-md border-accent_lightGray p-2 shadow-lg md:flex-row">
        <div data-files-upload-part class="files-upload-part flex h-full w-full flex-col items-center justify-evenly gap-4">
            <h1 class="text-xl font-bold">Review Video Files to Upload</h1>
            <ul data-selected-files-list class="selected-files-list flex flex-col gap-2"></ul>
            <button type="button" data-files-upload-button class="files-upload-button border-2 w-[10rem] rounded-lg border-black bg-accent p-4 px-2 py-1 text-white shadow-md hover:border-white hover:bg-black">
                Upload
            </button>
        </div>
        <div data-files-uploading-container class="files-uploading-container hidden h-full w-full flex-col items-center justify-center gap-4">
            <h1 class="text-md text-center font-bold text-red-600">Files Are Being Uploaded Please Do not Leave Page !!!</h1>
            <ul data-files-uploading-list class="files-uploading-list flex flex-col gap-2 text-sm"></ul>
        </div>
        <partial name="Partials/_LessonDetailsFormPartial" />
    </div>
    </div>
    
</div>
