
@{
    var currentViewName = ViewData["CurrentViewName"] as string;
    string GetActiveClass(string viewName)
    {

        return currentViewName == viewName ? "active" : "";

    };
}


<aside data-inr_sidebar-menu class="inr_sidebar-menu z-10 h-[calc(100svh-5rem)] flex-shrink-0 sticky left-0 top-[5rem] flex w-[5rem] flex-col items-center border-r border-r-accent_lightGray bg-white pt-[1rem]">
    <div class="inr_sidebar-top mb-[1rem] flex w-full flex-col items-center gap-2">
        <a>
            <img class="inr_sidebar-profile-image" src="~/images/profile-pic.png" alt="proile_pic" />
        </a>
        <div class="inr_sidebar-top-text text-center">
            <p class="hidden-sidebar">Your Teaching Hub </p>
            <p class="hidden-sidebar font-bold text-accent_lightGray">@User.Identity.Name</p>
        </div>
    </div>
    <div class="inr_sidbar-middle flex-1 w-full overflow-y-auto overflow-x-hidden">
        <ul class="inr_sidebar-list m-0 flex flex-col p-0">
            <li class="inr_sidebar-list-item @GetActiveClass("InstructorDashboard")">
                <a asp-action="InstructorDashboard" asp-controller="Instructor" class="inr_sidebar-link">
                    <span class="material-symbols-outlined inr_custom-icon-class">
                        dashboard
                    </span>
                    <span class="hidden-sidebar inr_sidebar-link-text">
                        Dashboard
                    </span>
                </a>
            </li>

            <li class="inr_sidebar-list-item @GetActiveClass("CreateLesson")">
                <a asp-action="CreateLesson" asp-controller="Instructor" class="inr_sidebar-link">
                    <span class="material-symbols-outlined inr_custom-icon-class">
                        animated_images
                    </span>
                    <span class="hidden-sidebar inr_sidebar-link-text">
                        Content
                    </span>
                </a>
            </li>

            <li class="inr_sidebar-list-item @GetActiveClass("Analytics")">
                <a  class="inr_sidebar-link">
                    <span class="material-symbols-outlined inr_custom-icon-class">
                        analytics
                    </span>
                    <span class="hidden-sidebar inr_sidebar-link-text">
                        Analytics
                    </span>
                </a>
            </li>
        </ul>
    </div>
    <div class="inr_sidebar-bottom flex w-full flex-col">
        <ul class="inr_sidebar-list m-0 flex flex-col p-0">
              <li class="inr_sidebar-list-item">
                <a class="inr_sidebar-link">
                    <span class="material-symbols-outlined inr_custom-icon-class">
                        settings
                    </span>
                    <span class="hidden-sidebar inr_sidebar-link-text">
                        Settings
                    </span>
                </a>
            </li>
        </ul>
    </div>
</aside>

<div data-inr_sidebar-mobile-overlay class="inr_sidebar-mobile-overlay fixed h-[100svh] w-full overflow-hidden bg-black opacity-70"></div>