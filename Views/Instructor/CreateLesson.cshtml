<div class="mx-auto w-full max-w-2xl">
    <form class="flex flex-col gap-4" enctype="multipart/form-data" asp-action="CreateLesson" asp-controller="Instructor" method="post">
        <h4 class="text-xl font-bold text-blue-700">Add a Lesson</h4>
        <div class="font-bold text-red-700" asp-validation-summary="ModelOnly"></div>

        <div class="flex flex-col gap-1">
            <input class="h-10 rounded-md bg-gray-200 p-2 font-bold outline-none" placeholder="Lesson Name" asp-for="LessonName" type="text" />
            <span class="text-sm font-bold text-red-700" asp-validation-for="LessonName"></span>
        </div>

        <div class="flex flex-col gap-1">
            <label asp-for="LessonVideo" class="font-semibold">Select Video</label>
            <input class="h-10 rounded-md bg-gray-200 p-2 font-bold outline-none" accept=".mp4" asp-for="LessonVideo" type="file" />
            <span class="text-sm font-bold text-red-700" asp-validation-for="LessonVideo"></span>
        </div>

        <div class="flex flex-col gap-1">
            <textarea class="rounded-md bg-gray-200 p-2 font-bold outline-none" placeholder="Description" asp-for="LessonDescription" rows="4"></textarea>
            <span class="text-sm font-bold text-red-700" asp-validation-for="LessonDescription"></span>
        </div>

        <div class="flex flex-col gap-1">
            <select class="rounded-md bg-gray-200 p-2 font-bold outline-none" asp-for="LessonCategory" asp-items="@Html.GetEnumSelectList(typeof(e_learning.Enums.LessonCategory))">
                <option value="">Select Lesson Category</option>
            </select>
            <span class="text-sm font-bold text-red-700" asp-validation-for="LessonCategory"></span>
        </div>

        <div class="flex justify-end">
            <button type="submit" class="btn rounded bg-blue-500 px-4 py-2 text-white hover:bg-black">Add Lesson</button>
        </div>
    </form>
</div>


