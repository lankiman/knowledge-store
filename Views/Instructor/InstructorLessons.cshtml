@model List<e_learning.DataTransfersObjects.LessonDto>

@{
    Layout = "_InstructorLayout";
    ViewData["Title"] = "My Lessons";
}

@if (Model.Count == 0)
{
    <div class="flex h-full w-full items-center justify-center">
        <p class="animate-pulse text-xl font-bold text-blue-600">You Currently Have No Lessons!</p>
    </div>
}

<div class="flex flex-col gap-4 md:flex-row">
    @foreach (var lesson in Model)
    {
        <div class="w-[4rem] h-[4rem] flex flex-col">
            <div>

                <p>@lesson.LessonName</p>
            </div>
            <div class="h-full w-full" >
                <video id="video" class="h-full w-full" control controls>
                    <source src="@Url.Action("PlayVideo","Lesson", new {videoId=lesson.LessonId} )" type="video/mp4">
                </video>
            </div>
            <p>@lesson.LessonDescription</p>
        </div>

    }
</div>

<script src="~/js/video.js"></script>