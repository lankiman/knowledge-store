@model e_learning.DataTransfersObjects.AdminDto

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Admin </title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="h-[100svh] flex overflow-auto bg-amber-50 md:overflow-hidden">
    <!-- Sidebar Menu Desktop -->
    <div class="h-[100svh] w-[20%] hidden flex-col bg-blue-700 md:flex">
        <a asp-action="Index" asp-controller="Home">
            <div class="flex items-center p-4 text-white">
                <img src="~/images/logo.svg" class="h-[28px] mr-3.5" />
                <h1 class="font-sans text-xl font-bold">E-LESSON</h1>
            </div>
        </a>
        <hr class="w-full p-2 text-white" />
        <a asp-action="AdminDashboard" asp-controller="Admin">
            <div class="flex items-center p-4 text-white">
                <img src="~/images/dashboard_svg.svg" class="h-[28px] mr-2" />
                <h1 class="font-bold">Dashboard</h1>
            </div>
        </a>
        <hr class="w-full p-2 text-white" />
        <a asp-action="CreatorDashboard" asp-controller="Creator">
            <div class="flex items-center p-4 text-white">
                <img src="~/images/creator_dashboard_icon.svg" class="h-[28px] mr-2" />
                <h1 class="font-bold">Creator</h1>
            </div>
        </a>
    </div>

    <!-- Sidebar Menu Mobile -->
    <div id="mobileBurger" class="h-[100svh] w-[50%] hidden flex-col bg-blue-700">
        <a asp-action="Index" asp-controller="Home">
            <div class="flex items-center p-4 text-white">
                <img src="~/images/logo.svg" class="h-[28px] mr-3.5" />
                <h1 class="font-sans text-xl font-bold">E-LESSON</h1>
            </div>
        </a>
        <hr class="w-full p-2 text-white" />
        <a asp-action="AdminDashboard" asp-controller="Admin">
            <div class="flex items-center p-4 text-white">
                <img src="~/images/dashboard_svg.svg" class="h-[28px] mr-2" />
                <h1 class="font-bold">Dashboard</h1>
            </div>
        </a>
        <hr class="w-full p-2 text-white" />
        <a asp-action="CreatorDashboard" asp-controller="Creator">
            <div class="flex items-center p-4 text-white">
                <img src="~/images/creator_dashboard_icon.svg" class="h-[28px] mr-2" />
                <h1 class="font-bold">Creator</h1>
            </div>
        </a>
    </div>

    <div class="flex w-full flex-col">
        <header class="flex">
            <!--Navbar-->
            <nav class="h-[4rem] flex w-full flex-row items-center justify-between bg-white p-4 text-black drop-shadow-md">
                <div class="md:hidden"><img id="menuBurger" class="size-10 cursor-pointer" src="~/images/burger_menu_open.svg" alt="burger menu" /></div>
                <h1 class="font-bold text-blue-500">Welcome Administrator</h1>
                <div class="ml-auto">
                    <div class="flex gap-2">
                        <h2 class="self-center font-bold text-blue-800">@Model.UserName</h2>
                        <img id="profilePicBurger" class="size-10 cursor-pointer" src="~/images/profile-pic.png" alt="profile piture" />
                    </div>
                    <div id="profileBurger" class="top-[4.5rem] absolute right-2 hidden size-40 flex-col items-center rounded-md bg-white p-2">

                        <button class="btn flex w-full items-center justify-center gap-1 bg-gray-50 hover:bg-amber-100" onclick="location.href='@Url.Action("Logout", "Account")'">
                            <img src="~/images/logout_svg.svg" />
                            <span>Logout</span>
                        </button>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="w-full p-4">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>