@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewData["Title"]</title>
</head>
<body class="flex h-[100svh] overflow-auto bg-amber-50">

    <main role="main" class="flex h-full w-full flex-col items-center justify-center gap-2 p-4 md:justify-normal">
        <div class="w-[80%] md:w-1/4">
            <div class="text-center">
                <div class="error mx-auto" data-text="500">500</div>
                <p class="mb-5 text-gray-800">Internal Server Error</p>
                <h2 class="text-red-600">An error occurred while processing your request.</h2>
                <p class="mb-0 text-gray-500">
                    It looks like you found a glitch in the matrix...
                </p>
                <button onclick="location.href='@Url.Action("Index", "Home")'" class="flex h-6 items-center hover:text-blue-600">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         height="20px"
                         viewBox="0 -960 960 960"
                         width="20px"
                         fill="black">
                        <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z" />
                    </svg>
                    <p class="self-baseline">return to homepage</p>
                </button>
            </div>
        </div>
    </main>

    <script src="~/js/script.js" asp-append-version="true"></script>
</body>
</html>