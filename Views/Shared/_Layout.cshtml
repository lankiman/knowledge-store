<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewData["Title"] E LESSON</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="h-full w-full text-purple-500">
    <header>
        <nav class="bg-blue-950 text-center shadow shadow-blue-700 drop-shadow-lg md:flex md:justify-between">
            <div class="flex items-center justify-between">
                <h1 class="m-2 p-2 text-4xl font-bold text-purple-300"><a>E-LESSON</a></h1>
                <div class="cursor-pointer px-6 md:hidden" id="burger">
                    <svg class="w-6" id="first" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 5.25h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5m-16.5 4.5h16.5" />
                    </svg>
                    <svg class="hidden w-6" id="second" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                    </svg>
                </div>
            </div>
            <div class="flex">
                <ul class="hidden w-full pb-3 pt-3 text-2xl font-light text-purple-300 md:flex md:justify-evenly md:gap-4 md:p-2 md:m-2" id="menu">
                    <li class="m-1 p-2">
                        <a>Home</a>
                    </li>
                    <li class="m-1 p-2">
                        <a>Courses</a>
                    </li>
                    <li class="m-1 p-2">
                        <a>Contact</a>
                    </li>
                    <li class="m-1 p-2">
                        <a>Pricing</a>
                    </li>
                    <li class="m-1 p-2">
                        <a>Login</a>
                    </li>
                    <li class="m-1 p-2">
                        <a>SignUp</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main role="main" class="w-full">

        @RenderBody()
    </main>

    <footer class="h-fit bg-purple-950 p-2 text-white">
        <div class="flex p-2">
            <div class="flex-1">
                <h4 class="text-center font-bold text-gray-300 md:text-3xl">E-LESSON</h4>
                <ul class="text-center text-sm font-light">
                    <li><a>FAQs</a></li>
                    <li><a>Contact</a></li>
                    <li><a>Login</a></li>
                    <li><a>SignUp</a></li>
                    <li><a>Team</a></li>
                </ul>
            </div>
            <div class="flex-1">
                <h4 class="text-center font-bold text-gray-300 md:text-3xl">Courses</h4>
                <ul class="text-center text-sm font-light">
                    <li>Chemistry</li>
                    <li>Physics</li>
                    <li>Mathematics</li>
                    <li>Pharmaceutical chemistry</li>
                    <li>CHM 221</li>
                    <li>CHM 333</li>
                    <li>CHM 321</li>
                    <li>BCM 201</li>
                </ul>
            </div>
            <div class="flex-1 items-center justify-center text-center">
                <a class="text-violet-300 md:text-3xl">Sign Up</a>
            </div>
        </div>
        <div class="flex justify-center p-2">
            &copy; E-LESSON INSTITUTE 2024<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>