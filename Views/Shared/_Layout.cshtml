<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> @ViewData["Title"] E LESSON</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body>
  <header>
      <nav class="h-[80px] fixed top-0 z-50 flex w-full flex-row items-center justify-between px-6">
          <a asp-action="Index" asp-controller="Home">
              <div class="flex items-center justify-between px-2">
                  <img src="~/images/logo.svg" class="h-[28px] mr-3.5"/>
                  <h1 class="font-sans text-xl font-bold">E-LESSON</h1>
              </div>
          </a>

          <div class="hidden md:flex md:items-center">
              <ul class="hidden md:flex md:flex-row md:items-center md:justify-center">
                  <li class="px-5"><a asp-action="Index" asp-controller="Home" active>Home</a></li>
                  <li class="px-5"><a asp-action="" asp-controller="">Lessons</a></li>
                  <li class="px-5"><a asp-action="" asp-controller="">About Us</a></li>
                  <li class="px-5"><a asp-action="" asp-controller="">Plans</a></li>
              </ul>
          </div> 

          <div class="hidden md:flex">
              <a asp-action="Login" asp-controller="Account" class="btn mr-3.5 text-blue-600 outline outline-blue-500">Login</a>
              <a asp-action="Register" asp-controller="Account" class="btn bg-blue-500 text-white outline outline-white">Sign in</a>
             
          </div>
      </nav> 
      <div>

      </div>
  </header>

<main role="main" class="w-full">

    @RenderBody()
</main>

<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>