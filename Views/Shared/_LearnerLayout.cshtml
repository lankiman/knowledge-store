<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 font-sans text-gray-900">
    <header class="fixed z-50 w-full bg-white shadow-md">
        <section class="flex w-full items-center justify-between p-4">
            <a href="home.html" class="text-2xl font-bold text-blue-600">E-LESSON</a>

            <!-- Search Form -->
            <form data-search-bar action="search.html" method="post" class="relative hidden items-center md:flex">
                <input type="text"
                       name="search_box"
                       required
                       placeholder="Search courses..."
                       class="w-64 rounded-full border px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                       maxlength="100" />
                <button type="submit" class="absolute right-2 text-gray-600 hover:text-blue-500">
                    <i class="fas fa-search"></i>
                </button>
            </form>

            <div class="relative flex items-center gap-2">
                <!-- Icons -->
                <div class="flex gap-2 text-gray-600">
                    <div id="menu-btn" class="fas fa-bars cursor-pointer hover:text-blue-500 md:hidden"></div>
                    <div data-search-btn id="search-btn" class="fas fa-search cursor-pointer hover:text-blue-500 md:hidden">

                    </div>
                    <form data-mobile-search-bar action="search.html" method="post" class="absolute right-0 top-10 hidden items-center md:hidden">
                        <input type="text"
                               name="search_box"
                               required
                               placeholder="Search courses..."
                               class="w-64 rounded-full border px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
                               maxlength="100" />
                    </form>
                </div>

                <!-- Profile Dropdown -->
                <div class="relative flex items-center md:flex">
                    <img src="~/images/profile-pic.png" class="border-2 h-10 w-10 rounded-full border-gray-300" alt="Profile Picture" />
                    <div class="profile-menu-dropdown absolute hidden">
                        <h3 class="font-semibold">@User.Identity.Name</h3>
                        <a class="text-blue-500 hover:underline" onclick="location.href='@Url.Action("Logout", "Account")'">Logout</a>
                    </div>
                </div>
            </div>
        </section>
    </header>

    <!-- Sidebar -->
    <div class="-translate-x-full fixed left-0 top-0 h-full w-64 transform bg-white shadow-lg transition-transform duration-300" id="sidebar">
        <div id="close-btn" class="cursor-pointer p-4 text-right text-gray-600">
            <i class="fas fa-times"></i>
        </div>
        <div class="py-6 text-center">
            <img class="border-2 mx-auto h-20 w-20 rounded-full border-gray-300" alt="Profile Picture" />
            <h3 class="mt-2 font-semibold">@User.Identity.Name</h3>

            <a class="text-blue-500 hover:underline">Logout</a>
        </div>
        <nav class="space-y-4 text-lg text-gray-700">
            <a class="block px-4 py-2 hover:bg-gray-100"><i class="fas fa-home mr-2"></i>Home</a>
            <a class="block px-4 py-2 hover:bg-gray-100"><i class="fas fa-question mr-2"></i>About</a>
            <a class="block px-4 py-2 hover:bg-gray-100"><i class="fas fa-graduation-cap mr-2"></i>Courses</a>
            <a class="block px-4 py-2 hover:bg-gray-100"><i class="fas fa-headset mr-2"></i>Contact Us</a>
        </nav>
    </div>

    <!-- Main Content -->
    <main role="main" class="container mx-auto px-4 pt-20">
        @RenderBody()
    </main>

    <script src="~/js/dashboardScript.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>