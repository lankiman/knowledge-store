@using Microsoft.AspNetCore.Mvc.TagHelpers

@model e_learning.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Signup";

    Layout = "_LoginAndRegisterLayout";
}

<div class="flex h-full w-full items-center justify-center gap-4 px-8">
    <div class="flex w-full flex-col items-start justify-center md:w-fit">
        <h4 class="item py-4 text-2xl font-bold text-blue-700">Create an Account</h4>
        <div class="font-bold text-red-700" asp-validation-summary="ModelOnly"></div>
        <form class="flex w-full flex-col gap-4 md:w-fit" autocomplete="off" asp-action="Register" asp-controller="Account" method="post">
            <div class="flex w-full flex-col gap-4 md:w-fit md:flex-row">
                <div class="flex flex-col gap-4">

                    <input class="h-10 rounded-sm bg-gray-200 p-2 font-bold outline-none" placeholder="First Name" asp-for="FirstName" type="text" />
                    <span class="font-bold text-red-700" asp-validation-for="FirstName"></span>
                    <input class="h-10 rounded-sm bg-gray-200 p-2 font-bold outline-none" placeholder="Last Name" asp-for="LastName" type="text" />
                    <span class="font-bold text-red-700" asp-validation-for="LastName"></span>
                    <input class="h-10 rounded-sm bg-gray-200 p-2 font-bold outline-none" placeholder="Middlename (optional)" asp-for="MiddleName" type="text" />
                    <span></span>
                    <input class="h-10 rounded-sm bg-gray-200 p-2 font-bold outline-none" placeholder="Phonenumber (optional)" asp-for="PhoneNumber" type="text" />
                    <span class="font-bold text-red-700" asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="flex flex-col gap-4">
                    <input class="h-10 rounded-sm bg-gray-200 p-2 font-bold outline-none" placeholder="Email Address" autocomplete="new-email" asp-for="Email" type="email" />
                    <span class="font-bold text-red-700" asp-validation-for="Email"></span>
                    <input class="h-10 rounded-sm bg-gray-200 p-2 font-bold outline-none" placeholder="Username" autocomplete="new-username" asp-for="Username" type="text" />
                    <span class="font-bold text-red-700" asp-validation-for="Username"></span>
                    <div class="relative flex h-10 w-full items-center justify-between rounded-sm bg-gray-200">
                        <input class="password__input h-full w-full bg-gray-200 p-2 font-bold outline-none" placeholder="Password" autocomplete="new-password" asp-for="Password" type="password" />
                        <span class="password__input--visible absolute right-1 hidden w-fit">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 height="24px"
                                 viewBox="0 -960 960 960"
                                 width="20px"
                                 class="cursor-pointer fill-zinc-700 hover:fill-blue-700">
