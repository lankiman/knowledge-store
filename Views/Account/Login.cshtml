@using Microsoft.AspNetCore.Mvc.TagHelpers

@model e_learning.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";

    Layout = "_LoginAndRegisterLayout";
}

<div class="flex h-full w-full items-center justify-evenly gap-4 px-8">
    <div class="w-full md:w-[30%]">
        <form class="flex flex-col gap-4" asp-action="Login" asp-controller="Account" method="post">
            <h4 class="font-bold text-blue-700">Login to your account</h4>
            <div class="font-bold text-red-700" asp-validation-summary="ModelOnly"></div>
            <input class="h-10 rounded-sm bg-gray-200 p-2 font-bold outline-none" placeholder="Email or Username" asp-for="LoginIdentifier" type="text" />
            <span class="font-bold text-red-700" asp-validation-for="LoginIdentifier"></span>
            <div class="relative flex h-10 w-full items-center justify-between rounded-sm bg-gray-200">
                <input class="password__input h-full w-full p-2 font-bold outline-none" placeholder="Password" asp-for="Password" type="password" />
                <span class="password__input--visible absolute right-1 hidden w-fit">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         height="24px"
                         viewBox="0 -960 960 960"
                         width="20px"
                         class="cursor-pointer fill-zinc-700 hover:fill-blue-700">
                        <path d="M480-320q75 0 127.5-52.5T660-500q0-75-52.5-127.5T480-680q-75 0-127.5 52.5T300-500q0 75 52.5 127.5T480-320Zm0-72q-45 0-76.5-31.5T372-500q0-45 31.5-76.5T480-608q45 0 76.5 31.5T588-500q0 45-31.5 76.5T480-392Zm0 192q-146 0-266-81.5T40-500q54-137 174-218.5T480-800q146 0 266 81.5T920-500q-54 137-174 218.5T480-200Zm0-300Zm0 220q113 0 207.5-59.5T832-500q-50-101-144.5-160.5T480-720q-113 0-207.5 59.5T128-500q50 101 144.5 160.5T480-280Z" />
                    </svg>
                </span>
                <span class="password__input--hidden absolute right-1 w-fit">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         height="24px"
                         viewBox="0 -960 960 960"
                         width="20px"
                         class="cursor-pointer fill-zinc-700 hover:fill-blue-700">
                        <path d="m644-428-58-58q9-47-27-88t-93-32l-58-58q17-8 34.5-12t37.5-4q75 0 127.5 52.5T660-500q0 20-4 37.5T644-428Zm128 126-58-56q38-29 67.5-63.5T832-500q-50-101-143.5-160.5T480-720q-29 0-57 4t-55 12l-62-62q41-17 84-25.5t90-8.5q151 0 269 83.5T920-500q-23 59-60.5 109.5T772-302Zm20 246L624-222q-35 11-70.5 16.5T480-200q-151 0-269-83.5T40-500q21-53 53-98.5t73-81.5L56-792l56-56 736 736-56 56ZM222-624q-29 26-53 57t-41 67q50 101 143.5 160.5T480-280q20 0 39-2.5t39-5.5l-36-38q-11 3-21 4.5t-21 1.5q-75 0-127.5-52.5T300-500q0-11 1.5-21t4.5-21l-84-82Zm319 93Zm-151 75Z" />
                    </svg>
                </span>
            </div>
            <span class="font-bold text-red-700" asp-validation-for="Password"></span>
            <div class="">
                <label>
                    <input asp-for="RememberMe" /> Remember me
                </label>
            </div>
            <div class="flex justify-between">
                <a asp-action="Register" asp-controller="Account" class="text-blue-700">Forgot Password?</a>
                <button type="submit" class="btn loading__trigger bg-blue-500 text-white hover:bg-black">Login</button>
            </div>
        </form>
    </div>
    <div class="w-[30%] hidden md:flex">
        <img class="" src="~/images/ELearning.png" />
    </div>
</div>