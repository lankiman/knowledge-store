@using Microsoft.AspNetCore.Mvc.TagHelpers
@model e_learning.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form class="flex flex-col" asp-action="Login" asp-controller="Account" method="post">
    <div>
        <label asp-for="LoginIdentifier">Username or Email</label>
        <input asp-for="LoginIdentifier" class="form-control" />
        <span asp-validation-for="LoginIdentifier"></span>
    </div>

    <div>
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password"/>
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <div>
            <label>
                <input asp-for="RememberMe" /> Remember me
            </label>
        </div>
    </div>

    <button type="submit" class="">Login</button>
</form>

